        "inhibited-none": "ÔÇ¢{:%a, %b %d %H:%M}",
        "dnd-inhibited-notification": "Ôá∑{:%a, %b %d %H:%M}<span foreground='red'><sup>ÔëÑ</sup></span>",
        "dnd-inhibited-none": "Ôá∑{:%a, %b %d %H:%M}"
      },
      "return-type": "json",
      "exec-if": "which swaync-client",
      "exec": "swaync-client -swb",
      "on-click": "swaync-client -t -sw",
      // "on-click-right": "swaync-client -d -sw",
      "escape": true
    },
    "backlight": {

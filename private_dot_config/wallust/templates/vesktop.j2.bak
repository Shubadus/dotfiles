/* ==== Discord Variables ==== */
.theme-dark { /* Dark Mode */

  /*  Header Color  */
  --header-primary: var(--text-normal);
  --header-secondary: var(--text-muted);

  /*  Text Color  */
  --text-normal: {{ foreground }};
  --text-muted: {{ foreground }}{{ 75 | alpha_hexa }};
  --interactive-normal: {{ background }}{{ 75 | alpha_hexa }};
  --interactive-hover: {{ foreground }};
  --interactive-active: {{ foreground }}{{ 85 | alpha_hexa }};
  --interactive-muted: {{ background }}{{ 85 | alpha_hexa }};

  /* Background Color */
  --background-primary: {{ background }};
  --background-secondary: {{ background }};
  --background-secondary-alt: {{ background }};
  --background-tertiary: {{ background }};
  --background-tertiary-alt: var(--background-secondary-alt);
  --background-accent: {{ background }}{{ 85 | alpha_hexa }};
  --background-floating: {{ background }};
  --background-modifier-hover: {{ background }}{{ 85 | alpha_hexa }};
  --background-modifier-active: {{ background | lighten(0.025) }}{{ 85 | alpha_hexa }};
  --background-modifier-selected: {{ background }}{{ 45 | alpha_hexa }};
  --background-modifier-accent: {{ background }};
  --background-mentioned: {{ background | lighten(0.125) }};
  --border-mentioned: {{ background | blend(foreground) }};
  --background-mentioned-hover: {{ background | lighten(0.125) }};
  --accent-color: {{ color4 }};

  /* Folder Color */
  --folder-color: {{ background }}{{ 80 | alpha_hexa }};
  --folder-color-light: {{ background | lighten(0.125) }}{{ 80 | alpha_hexa }};

  /* Scrollbars Color */
  --scrollbar-thin-thumb: transparent;
  --scrollbar-thin-track: transparent;
  --scrollbar-auto-thumb: {{ background }}{{ 70 | alpha_hexa }};
  --scrollbar-auto-thumb-hover: {{ background }}{{ 50 | alpha_hexa }};
  --scrollba-auto-track: transparent;
  --scrollbar-auto-scrollbar-color-thumb: var(--scrollbar-auto-thumb);
  --scrollbar-auto-scrollbar-color-track: var(--scrollbar-auto-track);

  /* Chat Box Color */
  --channeltextarea-background: var(--background-secondary);
  --channeltextarea-background-hover: var(--background-tertiary);

	/* Square avatar addons */
	--avatar-roundess: 5px;

  /* Mac Titlebar addons */
  --close-button-color: {{ color1 }}{{ 85 | alpha_hexa }};
  --maximize-button-color: {{ color3 }}{{ 85 | alpha_hexa }};
  --minimize-button-color: {{ color2 }}{{ 85 | alpha_hexa }};
}

.theme-light { /* Light Mode */

  /*  Header Color  */
  --header-primary: var(--text-normal);
  --header-secondary: var(--text-muted);

  /* Text Color */
  --text-normal: {{ foreground }};
  --text-muted: {{ foreground }}{{ 65 | alpha_hexa }};
  --interactive-normal: #4c505e;
  --interactive-hover: #404350;
  --interactive-active: #373a44;
  --interactive-muted: #77797c;

  /* Background Color */
  --background-primary: {{ background }};
  --background-secondary: {{ background }};
  --background-secondary-alt: {{ background }};
  --background-tertiary: {{ background }};
  --background-tertiary-alt: {{ background }};
  --background-accent: {{ background }};
  --background-floating: {{ background }};
  --background-mentioned: #c4c7da;
  --background-modifier-hover: #2c2a2a25;
  --background-modifier-active: #5a525229;
  --background-modifier-selected: #555e693d;
  --background-modifier-accent: #06060714;
  --border-mentioned: #a9afcf;
  --background-mentioned-hover: #cfd2e9;
  --accent-color: {{ color4 }};

  /* Folder Color */
  --folder-color: #a7a6a6d0;
  --folder-color-light: #afafafd0;

  /* Input Box Color */
  --input-box-bg: #c2c2c7;
  --input-box-border: #b3b4b8;
  --input-box-border-focus: #959699;

  /* Scrollbars Color */
  --scrollbar-thin-thumb: transparent;
  --scrollbar-thin-track: transparent;
  --scrollbar-auto-thumb: #a0a0a0af;
  --scrollbar-auto-thumb-hover: #77777785;
  --scrollbar-auto-track: transparent;
  --scrollbar-auto-scrollbar-color-thumb: var(--scrollbar-auto-thumb);
  --scrollbar-auto-scrollbar-color-track: var(--scrollbar-auto-track);

  /* Chat Box Color */
  --channeltextarea-background: var(--background-secondary);
  --channeltextarea-background-hover: var(--background-tertiary);

  /* Square avatar addons */
	--avatar-roundess: 5px;

  /* Mac Titlebar addons */
  --close-button-color: #e92a2ade;
  --maximize-button-color: #f7bc1bde;
  --minimize-button-color: #12db33de;
  --button-position: row;

}
